{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "es5",
      "esnext",
      "ES2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "lib",
    "types"
  ]
}
